<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:gravity="bottom"
    android:background="#4c161616"
    sothree:umanoPanelHeight="80dp"
    sothree:umanoShadowHeight="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map_layout">

    </RelativeLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/info_layout"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_gravity="left|center"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:id="@+id/name_info"
                android:text="sushi tel aviv"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="63dp"
                android:layout_marginRight="6dp"
                android:orientation="vertical"
                android:layout_gravity="center|right">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/info_btns_style"
                    android:paddingBottom="4dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="4dp"
                    app:srcCompat="@drawable/gps" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="63dp"
                android:layout_marginRight="6dp"
                android:orientation="vertical"
                android:layout_gravity="center|right">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/info_btns_style"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="15dp"
                    android:paddingTop="8dp"
                    app:srcCompat="@drawable/share_image" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="63dp"
                android:layout_marginRight="6dp"
                android:orientation="vertical"
                android:layout_gravity="center|right">

                <ImageView
                    android:id="@+id/carImage_info"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/info_btns_style"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    app:srcCompat="@drawable/car" />


            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/address_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:lines="2"
            android:paddingLeft="8dp"
            android:text="street" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="#ffff"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="80dp">

        </android.support.v7.widget.RecyclerView>

        <com.github.siyamed.shapeimageview.RoundedImageView
            app:siRadius="10dp"
            app:siBorderWidth="0dp"
            app:siSquare="true"
            app:siBorderColor="#1c99e2"
            android:id="@+id/image_info"
            android:layout_width="180dp"
            android:layout_height="180dp    "
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:background="#ffff"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


        </LinearLayout>

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>