<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/info_layout"
    android:layout_height="wrap_content"
    android:background="#18000000"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_weight="5">

                <ImageView
                    android:id="@+id/returm_info_IV"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="12dp"
                    app:srcCompat="@drawable/return_arrow" />


                <ImageView
                    android:id="@+id/location_info_IV"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:paddingBottom="6dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="4dp"
                    android:paddingTop="4dp"
                    app:srcCompat="@drawable/gps" />


                <ImageView
                    android:id="@+id/walk_info_IV"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:paddingBottom="9dp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:paddingTop="9dp"
                    app:srcCompat="@drawable/walk_man" />


                <ImageView
                    android:id="@+id/share_info_IV"
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:paddingBottom="11dp"
                    android:paddingLeft="11dp"
                    android:paddingRight="15dp"
                    android:paddingTop="11dp"
                    app:srcCompat="@drawable/share_image" />


                <ImageView
                    android:layout_weight="1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    app:srcCompat="@drawable/car" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="sushi tel aviv"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RatingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_launcher_background" />

        <LinearLayout
            android:background="#ffff"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


        </LinearLayout>

</LinearLayout>